<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TheaterTheater">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/theater_1"
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:src="@drawable/theater_1" />

        <TextView
            android:id="@+id/theater_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/theater_1"
            android:layout_centerHorizontal="true"
            android:text="Theater"
            android:textColor="#040202"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/theater_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/theater_2"
            android:layout_centerHorizontal="true"
            android:text="The Senator"
            android:textColor="#120C0C"
            android:textStyle="italic" />
        <RatingBar
            android:layout_below="@+id/theater_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rate"
            android:numStars="5"
            android:rating="4"
            android:layout_centerInParent="true"/>
        <TextView
            android:text="30/03/2021"
            android:layout_below="@+id/rate"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>