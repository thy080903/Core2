<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SchoolSchool">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/school_1"
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:src="@drawable/school_1" />

        <TextView
            android:id="@+id/school_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/school_1"
            android:layout_centerHorizontal="true"
            android:text="School"
            android:textColor="#3F51B5"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/school_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/school_2"
            android:layout_centerHorizontal="true"
            android:text="ForestView Public School"
            android:textColor="#100909"
            android:textStyle="italic" />
        <RatingBar
            android:layout_below="@+id/school_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rate"
            android:numStars="5"
            android:rating="2"
            android:layout_centerInParent="true"/>
        <TextView
            android:text="29/04/2016"
            android:layout_below="@+id/rate"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>